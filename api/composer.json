{
    "name": "chapel/management-api",
    "description": "Chapel Management System API",
    "type": "project",
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.0",
        "respect/validation": "^2.3",
        "vlucas/phpdotenv": "^5.6",
        "league/csv": "^9.11",
        "phpoffice/phpspreadsheet": "^1.29",
        "firebase/php-jwt": "^6.10",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Chapel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chapel\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "phpcs": "phpcs src tests --standard=PSR12",
        "phpcbf": "phpcbf src tests --standard=PSR12",
        "load-schema": "php bin/load-schema.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
